<body id="ec">
<p id="notice"><%= notice %></p>

<h1>List of Enrollments</h1><br><br>

<style>
table, th, td {
    border: 1px solid black;
}
</style>

<table style="width:50%">
  <thead>
    <tr>
      <th>Student</th>
      <th>Course</th>
      <th>Percentage</th>
      <th>Lettergrade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrolls.each do |enroll| %>
      <tr>
        <td><%= enroll.student_id %></td>
        <td><%= enroll.course_id %></td>
        <td><%= enroll.percentage %></td>
        <td><%= enroll.lettergrade %></td>
        <td><%= link_to 'Show', enroll %></td>
        <td><%= link_to 'Edit', edit_enroll_path(enroll) %></td>
        <td><%= link_to 'Destroy', enroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enroll', new_enroll_path %><br>
<%= link_to 'Home', assign2_q2_path %><br>
</body>
